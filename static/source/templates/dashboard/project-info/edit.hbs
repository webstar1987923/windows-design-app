<form class="form-horizontal">
    <div>
        <div class="form-group">
            <label class="col-sm-4">
                Project Name:
            </label>
            <div class="col-sm-8">
                <input type="text" value="{{project_name}}"  name="project_name" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">
                Client Name:
            </label>
            <div class="col-sm-8">
                <input type="text" value="{{client_name}}"  name="client_name" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">
                Company:
            </label>
            <div class="col-sm-8">
                <input type="text" value="{{client_company_name}}"  name="client_company_name" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">
                Phone:
            </label>
            <div class="col-sm-8">
                <input type="text" value="{{client_phone}}"  name="client_phone" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">
                Email:
            </label>
            <div class="col-sm-8">
                <input type="text" value="{{client_email}}"  name="client_email" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">
                Client Address:
            </label>
            <div class="col-sm-8">
                <input type="text" value="{{client_address}}"  name="client_address" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">
                Project Address:
            </label>
            <div class="col-sm-8">
                <input type="text" value="{{project_address}}"  name="project_address" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">
                Quote Rev.:
            </label>
            <div class="col-sm-8">
                <input type="number" value="{{quote_revision}}"  name="quote_revision" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">
                Quote Date:
            </label>
            <div class="col-sm-8">
                <input class="date" type="text" value="{{quote_date}}"   name="quote_date" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">
                Project Notes:
            </label>
            <div class="col-sm-8">
                <textarea   name="project_notes">{{project_notes}}</textarea>
            </div>
        </div>
           <div class="form-group">
            <label class="col-sm-4">
                Shipping Notes:
            </label>
            <div class="col-sm-8">
                <textarea   name="shipping_notes">{{shipping_notes}}</textarea>
            </div>
        </div>
    </div>

</form>
