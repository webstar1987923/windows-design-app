<div class="value{{#if show_placeholder}} is-placeholder{{/if}}">
    {{ readable_value }}
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
</div>
<div class="edit">
    <input autocomplete="off" type="{{ input_type }}" value="{{ value }}" />
    <span class="glyphicon glyphicon-remove revert-editable js-revert-editable" aria-hidden="true" tooltip="Reset"></span>
</div>
